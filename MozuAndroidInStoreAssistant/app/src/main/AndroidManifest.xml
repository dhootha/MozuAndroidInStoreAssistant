<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mozu.mozuandroidinstoreassistant.app">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name="com.mozu.mozuandroidinstoreassistant.MozuApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name"></activity>
        <activity android:name=".webview.WebViewActivity"></activity>
        <activity
            android:name=".ChooseTenantAndSiteActivity"
            android:label="@string/app_name"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.Mozu.NoActionBar"></activity>
        <activity
            android:name=".BaseActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Mozu.NoActionBar"></activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:configChanges="orientation|screenSize"
            android:theme="@style/Theme.Mozu.NoActionBar"
            android:windowSoftInputMode="adjustPan|stateVisible">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.crashlytics.ApiKey"
            android:value="08ea2133df628f5114adfd1e1cbb80584923ca9a" />

        <activity
            android:name=".ProductDetailActivity"
            android:label="@string/title_activity_product_detail"></activity>
        <activity
            android:name=".CustomerDetailActivity"
            android:label="@string/title_activity_customer_detail"></activity>

        <activity
            android:name=".ImagePagerActivity"
            android:label="@string/title_activity_image_list"
            android:launchMode="singleInstance"
            android:theme="@style/Transparent"></activity>
        <activity
            android:name=".OrderDetailActivity"
            android:label="@string/title_activity_order_detail"></activity>
    </application>


    <supports-screens android:smallScreens="false"
        android:normalScreens="false"
        android:largeScreens="true"
        android:xlargeScreens="true"
        android:requiresSmallestWidthDp="600" />

</manifest>
