<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginBottom="20dp"
    android:layout_marginTop="20dp"
    android:gravity="center_vertical"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:layout_width="match_parent"
    android:layout_height="64dp">

    <TextView
        android:layout_weight="1"
        android:layout_width="0dp"
        android:textSize="16sp"
        android:textColor="@color/dark_gray_text"
        android:id="@+id/customer_wishlist_product_value"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_weight="1"
        android:layout_width="0dp"
        android:textSize="16sp"
        android:gravity="right"
        android:textColor="@color/mozu_color"
        android:id="@+id/customer_wishlist_price_value"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="16sp"
        android:gravity="right"
        android:textColor="@color/mozu_color"
        android:id="@+id/customer_wishlist_saleprice_value"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="16sp"
        android:textColor="@color/dark_gray_text"
        android:id="@+id/customer_wishlist_qty_value"
        android:gravity="right"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="16sp"
        android:textColor="@color/dark_gray_text"
        android:id="@+id/customer_wishlist_purchasable_value"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="16sp"
        android:textColor="@color/dark_gray_text"
        android:id="@+id/customer_wishlist_date_added_value"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
</LinearLayout>

