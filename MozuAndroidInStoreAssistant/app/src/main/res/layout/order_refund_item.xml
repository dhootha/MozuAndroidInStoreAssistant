<?xml version="1.0" encoding="utf-8"?>
<com.mozu.mozuandroidinstoreassistant.app.layout.order.OrderRefundItemRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/list_item_background"
    android:minHeight="64dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_height="wrap_content">

    <TextView
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:textColor="@color/dark_gray_text"
        android:id="@+id/refund_payment_type_value"
        android:layout_height="match_parent" />

    <TextView
        android:gravity="center_vertical"
        android:textColor="@color/dark_gray_text"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:id="@+id/refund_payment_cardtype_value"
        android:layout_height="match_parent" />

    <TextView
        android:gravity="center_vertical"
        android:textColor="@color/dark_gray_text"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:id="@+id/refund_payment_cardnumber_value"
        android:layout_height="match_parent" />

    <TextView
        android:gravity="center_vertical"
        android:textColor="@color/dark_gray_text"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:id="@+id/refund_payment_amount_credited_value"
        android:layout_height="match_parent" />
</com.mozu.mozuandroidinstoreassistant.app.layout.order.OrderRefundItemRow>
