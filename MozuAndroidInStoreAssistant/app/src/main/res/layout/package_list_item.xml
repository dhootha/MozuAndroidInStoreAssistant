<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/inventory_header"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:attr/listPreferredItemHeight">

    <TextView
        android:id="@+id/package_item_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".6"/>

    <com.mozu.mozuandroidinstoreassistant.app.views.NetworkProductNameTextView
        android:id="@+id/package_item_product"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.4"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/package_item_quantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".2"/>

</LinearLayout>