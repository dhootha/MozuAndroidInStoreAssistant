<?xml version="1.0" encoding="utf-8"?>
<com.mozu.mozuandroidinstoreassistant.app.layout.order.FullfillmentPackageRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
                                                                              android:background="@drawable/list_item_background"
    android:gravity="center_vertical"
                                                                              android:minHeight="64dp"
                                                                              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/package_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:text="@string/not_available"
            android:textColor="@color/dark_gray_text"
            android:textSize="14sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/package_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@id/package_name"
            android:text="@string/not_available"
            android:textColor="@color/dark_gray_text"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/package_tracking_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@id/package_count"
            android:text="@string/not_available"
            android:textColor="@color/mozu_color"
            android:textSize="14sp"
            />

        <CheckBox
            android:id="@+id/selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"/>

    </RelativeLayout>
    </com.mozu.mozuandroidinstoreassistant.app.layout.order.FullfillmentPackageRow>

