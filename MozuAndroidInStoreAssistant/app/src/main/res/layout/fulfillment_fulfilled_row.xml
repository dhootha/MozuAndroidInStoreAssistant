<?xml version="1.0" encoding="utf-8"?>
<com.mozu.mozuandroidinstoreassistant.app.layout.order.FulfillmentItemFulfilledRow
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_item">

    <TextView
        android:id="@+id/fulfillment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/fulfillment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/fulfillment_name"/>

    <TextView
        android:id="@+id/item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/fulfillment_date"/>

    <TextView
        android:id="@+id/location_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fulfillment_name"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="40dp"
        android:labelFor="@+id/location_code"
        android:text="@string/pickup_location"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/location_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fulfillment_name"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/location_label"/>


</com.mozu.mozuandroidinstoreassistant.app.layout.order.FulfillmentItemFulfilledRow>