<?xml version="1.0" encoding="utf-8"?>
<com.mozu.mozuandroidinstoreassistant.app.layout.order.FullfillmentItemRow
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@drawable/list_item_background"
    android:gravity="center_vertical"
    android:minHeight="64dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/order_item_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_weight=".5"
        android:text="@string/order_item_product_header"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/order_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.25"
        android:text="@string/order_item_product_header"
        android:textColor="@color/dark_gray_text"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/fulfillment_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".5"
        android:gravity="center"
        android:text="fulfillment"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/location_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".6"
        android:gravity="center"
        android:text="@string/pickup_location"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/quantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".4"
        android:gravity="center"
        android:text="@string/order_item_quantity_header"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/ordered_item_total"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".4"
        android:gravity="center"
        android:text="@string/order_item_total_header"
        android:textSize="14sp"/>


</com.mozu.mozuandroidinstoreassistant.app.layout.order.FullfillmentItemRow>

