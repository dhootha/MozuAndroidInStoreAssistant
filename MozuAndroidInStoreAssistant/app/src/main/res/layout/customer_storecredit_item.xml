<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:layout_height="64dp">


    <TextView
        android:id="@+id/customer_credit_code_value"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:textSize="14sp"
        android:textColor="@color/dark_gray_text"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_weight="1"
        android:layout_width="0dp"
        android:textSize="14sp"
        android:textColor="@color/dark_gray_text"
        android:id="@+id/customer_store_credit_type_value"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_weight="1"
        android:layout_width="0dp"
        android:textSize="14sp"
        android:textColor="@color/dark_gray_text"
        android:id="@+id/customer_credit_date_issued_value"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:textSize="14sp"
        android:textColor="@color/dark_gray_text"
        android:id="@+id/customer_credit_expires_value"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_weight="1"
        android:layout_width="0dp"
        android:textSize="14sp"
        android:gravity="right"
        android:textColor="@color/mozu_color"
        android:id="@+id/customer_credit_amount_value"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_weight="1"
        android:layout_width="0dp"
        android:textSize="14sp"
        android:gravity="right"
        android:textColor="@color/mozu_color"
        android:id="@+id/customer_credit_balance_value"
        android:layout_height="wrap_content" />


</LinearLayout>
