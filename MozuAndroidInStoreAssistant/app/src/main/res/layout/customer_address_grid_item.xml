<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    
    android:paddingTop="25dp"
    android:paddingBottom="10dp"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/product_detail_images_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/customer_address_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/customer_address_company_name"
        android:layout_width="fill_parent"
        android:fontFamily="sans-serif-light"
        android:layout_height="wrap_content" />

    <TextView
        android:fontFamily="sans-serif-light"
        android:id="@+id/customer_address_line1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:fontFamily="sans-serif-light"
        android:id="@+id/customer_email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:fontFamily="sans-serif-light"
        android:id="@+id/customer_contact_num"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:visibility="invisible"
        android:text="PRIMARY"
        android:textStyle="bold"
        android:id="@+id/customer_primary_address"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
