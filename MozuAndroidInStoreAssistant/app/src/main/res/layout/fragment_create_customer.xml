<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/cancel"
        style="@style/ButtonMozu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="8dp"
        android:text="@string/cancel"/>
    <Button
        android:id="@+id/verify"
        style="@style/ButtonMozu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="false"
        android:layout_marginBottom="16dp"
        android:layout_toLeftOf="@+id/next"
        android:text="@string/verify"/>

    <Button
        android:id="@+id/next"
        style="@style/ButtonMozu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="@string/next"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/verify"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <com.mozu.mozuandroidinstoreassistant.app.views.FloatLabelLayout
                android:id="@+id/first_name_float_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                app:floatLabelTextAppearance="@style/TextAppearance.Mozu.FloatLabel">

                <EditText
                    android:id="@+id/first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:hint="@string/first_name"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:nextFocusDown="@+id/last_name"
                    android:singleLine="true"/>

            </com.mozu.mozuandroidinstoreassistant.app.views.FloatLabelLayout>

            <com.mozu.mozuandroidinstoreassistant.app.views.FloatLabelLayout
                android:id="@+id/last_name_float_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                app:floatLabelTextAppearance="@style/TextAppearance.Mozu.FloatLabel">

                <EditText
                    android:id="@+id/last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:hint="@string/last_name"
                    android:imeOptions="actionNext"
                    android:nextFocusDown="@+id/phone_number"
                    android:singleLine="true"
                    />
            </com.mozu.mozuandroidinstoreassistant.app.views.FloatLabelLayout>

            <com.mozu.mozuandroidinstoreassistant.app.views.FloatLabelLayout
                android:id="@+id/phonenumber_float_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                app:floatLabelTextAppearance="@style/TextAppearance.Mozu.FloatLabel">

                <EditText
                    android:id="@+id/phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:hint="@string/phone"
                    android:imeOptions="actionNext"
                    android:inputType="phone"
                    android:singleLine="true"/>
            </com.mozu.mozuandroidinstoreassistant.app.views.FloatLabelLayout>

            <com.mozu.mozuandroidinstoreassistant.app.views.FloatLabelLayout
                android:id="@+id/email_float_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                app:floatLabelTextAppearance="@style/TextAppearance.Mozu.FloatLabel">

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:hint="@string/email_address"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:nextFocusDown="@+id/address_1"
                    android:singleLine="true"/>
            </com.mozu.mozuandroidinstoreassistant.app.views.FloatLabelLayout>

            <TextView
                android:id="@+id/type_float_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:labelFor="@+id/address_type"
                android:text="@string/type"
                android:textColor="@color/mozu_color">
            </TextView>

            <Spinner
                android:id="@+id/address_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"/>


            <com.mozu.mozuandroidinstoreassistant.app.views.FloatLabelLayout
                android:id="@+id/address_1__float_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                app:floatLabelTextAppearance="@style/TextAppearance.Mozu.FloatLabel">

                <EditText
                    android:id="@+id/address_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:hint="@string/address_1"
                    android:imeOptions="actionNext"
                    android:nextFocusDown="@+id/address_2"
                    android:singleLine="true"/>
            </com.mozu.mozuandroidinstoreassistant.app.views.FloatLabelLayout>

            <com.mozu.mozuandroidinstoreassistant.app.views.FloatLabelLayout
                android:id="@+id/address_2_float_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                app:floatLabelTextAppearance="@style/TextAppearance.Mozu.FloatLabel">

                <EditText
                    android:id="@+id/address_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:hint="@string/adddress_2"
                    android:imeOptions="actionNext"
                    android:nextFocusDown="@+id/city"
                    android:singleLine="true"/>
            </com.mozu.mozuandroidinstoreassistant.app.views.FloatLabelLayout>

            <com.mozu.mozuandroidinstoreassistant.app.views.FloatLabelLayout
                android:id="@+id/city_float_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                app:floatLabelTextAppearance="@style/TextAppearance.Mozu.FloatLabel">

                <EditText
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:hint="@string/city"
                    android:imeOptions="actionNext"
                    android:nextFocusDown="@+id/state"
                    android:singleLine="true"
                    />
            </com.mozu.mozuandroidinstoreassistant.app.views.FloatLabelLayout>

            <TextView
                android:id="@+id/state_float_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:labelFor="@+id/state"
                android:text="@string/state"
                android:textColor="@color/mozu_color"
                />

            <Spinner
                android:id="@+id/state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"/>

            <com.mozu.mozuandroidinstoreassistant.app.views.FloatLabelLayout
                android:id="@+id/zip_float_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                app:floatLabelTextAppearance="@style/TextAppearance.Mozu.FloatLabel">

                <EditText
                    android:id="@+id/zipcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:hint="@string/zip"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:nextFocusDown="@+id/verify"
                    android:singleLine="true"/>
            </com.mozu.mozuandroidinstoreassistant.app.views.FloatLabelLayout>

            <com.mozu.mozuandroidinstoreassistant.app.views.FloatLabelLayout
                android:id="@+id/country_float_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                app:floatLabelTextAppearance="@style/TextAppearance.Mozu.FloatLabel">

                <EditText
                    android:id="@+id/country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:editable="false"
                    android:hint="@string/country"
                    android:imeOptions="actionNext"
                    android:nextFocusDown="@+id/country"
                    android:singleLine="true"
                    android:text="US"/>
            </com.mozu.mozuandroidinstoreassistant.app.views.FloatLabelLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/default_billing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/default_billing"/>

                <CheckBox
                    android:id="@+id/default_shipping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:checked="true"
                    android:text="@string/default_shipping"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>