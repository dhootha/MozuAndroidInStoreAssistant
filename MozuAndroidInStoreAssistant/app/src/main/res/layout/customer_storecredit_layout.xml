<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="@string/customer_credit_code"
            android:fontFamily="sans-serif-light"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="@string/customer_credit_date_issued"
            android:fontFamily="sans-serif-light"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="@string/customer_credit_amount"
            android:fontFamily="sans-serif-light"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_weight="3"
            android:layout_width="0dp"
            android:text="@string/customer_credit_issued_by"
            android:fontFamily="sans-serif-light"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="@string/customer_credit_expires"
            android:fontFamily="sans-serif-light"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="@string/customer_credit_balance"
            android:fontFamily="sans-serif-light"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/divider_black" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/divider_white" />

    <com.mozu.mozuandroidinstoreassistant.app.views.LoadingView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/customer_credit_loading">

        <ListView
            android:id="@+id/customer_credit_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.mozu.mozuandroidinstoreassistant.app.views.LoadingView>

</LinearLayout>
