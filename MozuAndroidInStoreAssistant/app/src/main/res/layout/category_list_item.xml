<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/category_list_layout"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="64dp"
     android:paddingLeft="24dp"
    android:gravity="center_vertical"
    android:background="@color/semi_white_background">

    <com.mozu.mozuandroidinstoreassistant.app.views.LoadingView
        android:id="@+id/category_loading"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/category_image"
            android:scaleType="fitCenter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_nocategoryphoto" />
    </com.mozu.mozuandroidinstoreassistant.app.views.LoadingView>

    <TextView
        android:id="@+id/category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="Thin"
        android:textSize="20sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@android:color/black" />

</LinearLayout>