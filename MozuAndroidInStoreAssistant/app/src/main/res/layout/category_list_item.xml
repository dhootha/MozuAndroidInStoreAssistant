<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/category_list_layout"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:gravity="center_vertical"
    android:paddingRight="24dp"
    android:paddingLeft="24dp"
    android:background="@color/semi_white_background">

    <com.mozu.mozuandroidinstoreassistant.app.views.LoadingView
        android:id="@+id/category_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/category_image"
            android:layout_width="@dimen/category_list_item_width"
            android:layout_height="@dimen/category_list_item_height"
            android:src="@drawable/icon_nocategoryphoto" />
    </com.mozu.mozuandroidinstoreassistant.app.views.LoadingView>

    <TextView
       android:layout_gravity="center_vertical"
        android:id="@+id/category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/dark_gray_text"
        android:textSize="18sp"
        android:maxLines="1"
        android:ellipsize="end" />

</LinearLayout>