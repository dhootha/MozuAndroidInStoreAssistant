<?xml version="1.0" encoding="utf-8"?>

<com.mozu.mozuandroidinstoreassistant.app.layout.order.OrderReturnItemRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:minHeight="64dp"
    android:background="@drawable/list_item_background"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_height="wrap_content">

    <TextView
       android:gravity="center_vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:textColor="@color/dark_gray_text"
        android:id="@+id/product_code_header_value"
        android:text="@string/not_available"
        android:layout_height="match_parent" />

    <TextView
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:textColor="@color/dark_gray_text"
        android:id="@+id/product_title_header_value"
        android:text="@string/not_available"
        android:layout_height="match_parent" />

    <TextView
        android:textColor="@color/dark_gray_text"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:id="@+id/product_price_header_value"
        android:text="@string/not_available"
        android:layout_height="match_parent" />

    <TextView
        android:textColor="@color/dark_gray_text"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:id="@+id/return_loss_header_value"
        android:text="@string/not_available"
        android:layout_height="match_parent" />

    <TextView
        android:textColor="@color/dark_gray_text"
        android:gravity="center_vertical|right"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:id="@+id/return_restockable_header_value"
        android:text="@string/not_available"
        android:layout_height="match_parent" />

    <TextView
        android:textColor="@color/dark_gray_text"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:gravity="right|center_vertical"
        android:id="@+id/return_reason_header_value"
        android:text="@string/not_available"
        android:layout_height="match_parent" />

    <TextView
        android:textColor="@color/dark_gray_text"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:id="@+id/return_quantity_header_value"
        android:gravity="right|center_vertical"
        android:text="@string/not_available"
        android:layout_height="match_parent" />

    <TextView
        android:textColor="@color/dark_gray_text"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:id="@+id/return_quantity_returned_header_value"
        android:gravity="right|center_vertical"
        android:text="@string/not_available"
        android:layout_height="match_parent" />
</com.mozu.mozuandroidinstoreassistant.app.layout.order.OrderReturnItemRow>


