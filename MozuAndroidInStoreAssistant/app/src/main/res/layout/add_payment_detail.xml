<?xml version="1.0" encoding="utf-8"?>


<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        style="@style/AppTheme.ActivityDialog"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="750dp"
        android:orientation="vertical"
        android:padding="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/add_payment"
                android:textSize="32sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.mozu.mozuandroidinstoreassistant.app.views.FloatLabelLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight="4"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                app:floatLabelTextAppearance="@style/TextAppearance.Mozu.FloatLabel">

                <EditText
                    android:id="@+id/card_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:hint="@string/prompt_card_name"
                    android:imeOptions="flagNavigateNext"
                    android:inputType="text"

                    android:maxLines="1"
                    android:paddingBottom="10dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="10dp"
                    android:singleLine="true"
                    android:textColor="@color/dark_gray_text"
                    android:textSize="16sp"/>

            </com.mozu.mozuandroidinstoreassistant.app.views.FloatLabelLayout>

            <com.mozu.mozuandroidinstoreassistant.app.views.FloatLabelLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="16dp"
                android:layout_weight="3"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                app:floatLabelTextAppearance="@style/TextAppearance.Mozu.FloatLabel">

                <EditText
                    android:id="@+id/card_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:hint="@string/prompt_amount"
                    android:imeOptions="flagNavigateNext"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:paddingBottom="10dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="10dp"
                    android:singleLine="true"
                    android:textColor="@color/dark_gray_text"
                    android:textSize="16sp"/>

            </com.mozu.mozuandroidinstoreassistant.app.views.FloatLabelLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:paddingTop="12dp">


                <Spinner
                    android:id="@+id/card_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/card_types"
                    android:fontFamily="sans-serif-light"
                    android:hint="@string/prompt_card_type"
                    android:imeOptions="flagNavigateNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingBottom="10dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="10dp"
                    android:singleLine="true"
                    android:textColor="@color/dark_gray_text"
                    android:textSize="16sp"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">

            <com.mozu.mozuandroidinstoreassistant.app.views.FloatLabelLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight="4"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                app:floatLabelTextAppearance="@style/TextAppearance.Mozu.FloatLabel">

                <EditText
                    android:id="@+id/card_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:hint="@string/prompt_card_number"
                    android:imeOptions="flagNavigateNext"
                    android:inputType="number"
                    android:maxLength="16"
                    android:maxLines="1"
                    android:paddingBottom="10dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="10dp"
                    android:singleLine="true"
                    android:textColor="@color/dark_gray_text"
                    android:textSize="16sp"/>

            </com.mozu.mozuandroidinstoreassistant.app.views.FloatLabelLayout>

            <com.mozu.mozuandroidinstoreassistant.app.views.FloatLabelLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="16dp"
                android:layout_weight="2"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                app:floatLabelTextAppearance="@style/TextAppearance.Mozu.FloatLabel">

                <EditText
                    android:id="@+id/card_expire_month"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:hint="@string/prompt_exp_month"
                    android:imeOptions="flagNavigateNext"
                    android:inputType="number"
                    android:maxLength="2"
                    android:maxLines="1"
                    android:paddingBottom="10dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="10dp"
                    android:singleLine="true"
                    android:textColor="@color/dark_gray_text"
                    android:textSize="16sp"/>

            </com.mozu.mozuandroidinstoreassistant.app.views.FloatLabelLayout>

            <com.mozu.mozuandroidinstoreassistant.app.views.FloatLabelLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="16dp"
                android:layout_weight="2"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                app:floatLabelTextAppearance="@style/TextAppearance.Mozu.FloatLabel">

                <EditText
                    android:id="@+id/card_expire_year"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:hint="@string/prompt_expire_year"
                    android:imeOptions="flagNavigateNext"
                    android:inputType="numberDecimal"
                    android:maxLength="4"
                    android:maxLines="1"
                    android:paddingBottom="10dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="10dp"
                    android:singleLine="true"
                    android:textColor="@color/dark_gray_text"
                    android:textSize="16sp"/>

            </com.mozu.mozuandroidinstoreassistant.app.views.FloatLabelLayout>

            <com.mozu.mozuandroidinstoreassistant.app.views.FloatLabelLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="16dp"
                android:layout_weight="2"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                app:floatLabelTextAppearance="@style/TextAppearance.Mozu.FloatLabel">

                <EditText
                    android:id="@+id/card_cvv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:hint="@string/prompt_exp_cvv"
                    android:imeOptions="flagNavigateNext"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:paddingBottom="10dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="10dp"
                    android:singleLine="true"
                    android:textColor="@color/dark_gray_text"
                    android:textSize="16sp"/>

            </com.mozu.mozuandroidinstoreassistant.app.views.FloatLabelLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="right">

            <Button
                android:id="@+id/cancel_button"
                style="@style/ButtonMozu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"/>

            <Button
                android:id="@+id/add_payment_button"
                style="@style/ButtonMozu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/payment_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/semi_transparent_image_view_background"
        android:gravity="center"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    </LinearLayout>
</FrameLayout>