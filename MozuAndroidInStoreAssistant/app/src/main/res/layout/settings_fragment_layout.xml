<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_alignParentLeft="true"
            android:text="@string/settings_header"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imageView_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:src="@drawable/icon_close" />
    </RelativeLayout>

    <TextView
        android:layout_marginTop="25dp"
        android:fontFamily="sans-serif-light"
        android:textSize="12sp"
        android:text="@string/default_store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/default_store_value"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:layout_height="wrap_content" />

        <Button
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:background="@drawable/product_detail_images_background"
            android:id="@+id/update_store"
            android:text="@string/store_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <TextView
        android:layout_marginTop="25dp"
        android:fontFamily="sans-serif-light"
        android:textSize="12sp"
        android:text="@string/settings_website"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="18sp"
        android:clickable="true"
        android:id="@+id/website_value"
        android:textColor="@color/mozu_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:layout_marginTop="25dp"
        android:background="@drawable/product_detail_images_background"
        android:id="@+id/clear_search"
        android:text="@string/clear_search_results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
