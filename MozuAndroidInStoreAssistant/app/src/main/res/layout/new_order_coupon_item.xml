<?xml version="1.0" encoding="utf-8"?>
<com.mozu.mozuandroidinstoreassistant.app.layout.order.NewOrderCouponLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="@string/add_coupon"
        android:textColor="@color/light_black_text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="-3dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/coupon_spinner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <ProgressBar
            android:id="@+id/coupon_progress"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone"/>
    </LinearLayout>


</com.mozu.mozuandroidinstoreassistant.app.layout.order.NewOrderCouponLayout>

